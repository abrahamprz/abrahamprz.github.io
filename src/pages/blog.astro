---
import Layout from '../layouts/Layout.astro';
import ContentWrapper from '../components/ContentWrapper.astro';

const title = "Blog";
const intro = "Welcome to my blog! I'll be sharing thoughts on game development, web technologies, and other topics.";
const placeholder = "This is a placeholder for future blog posts.";
const comingSoon = "Coming Soon!";
---
<Layout>
  <ContentWrapper>
    <h1 class="text-4xl font-extrabold text-sky-700 dark:text-sky-200 mb-2">
      {title}
    </h1>
    <p class="text-lg text-neutral-700 dark:text-slate-300">
      {intro}
    </p>

    <div class="mt-16 text-center text-neutral-500 dark:text-neutral-400">
      <i class="fas fa-pencil-alt fa-3x"></i>
      <p class="mt-4 text-xl">{comingSoon}</p>
    </div>
  </ContentWrapper>
</Layout>
